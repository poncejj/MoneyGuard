@model List<MoneyGuard.Web.Models.clsFactura>

@{
    ViewBag.Title = "Factura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Factura</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarFactura", "ServiciosBasicos", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Numero de suministro</th>
                                <th>Valor Factura</th>
                                <th>Valor Pendiente</th>
                                <th>Fecha Emision Pendiente</th>
                                <th>Fecha Vencimiento</th>
                                <th>Pagado</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                                <th>Detalle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsFactura objFactura in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objFactura.numeroSuministro</td>
                                    <td>@objFactura.valorFactura</td>
                                    <td>@objFactura.valorPendiente</td>
                                    <td>@objFactura.fechaEmision</td>
                                    <td>@objFactura.fechaVencimiento</td>
                                    <td>@objFactura.valorPagado</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarFactura", "ServiciosBasicos", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idFactura" name="idfactura" value="@objFactura.idFactura" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarFactura", "ServiciosBasicos", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idFacturaEliminado" name="idfacturaeliminado" value="@objFactura.idFactura" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("DetalleFactura", "ServiciosBasicos", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-list"></i>
                                            </button>
                                            <input type="hidden" id="idFactura" name="idfactura" value="@objFactura.idFactura" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
