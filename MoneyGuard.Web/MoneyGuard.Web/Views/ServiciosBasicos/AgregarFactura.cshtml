@model MoneyGuard.Web.Models.clsFactura

@{
    ViewBag.Title = "AgregarFactura";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Agregar Factura
            </div>
            @using (Html.BeginForm("EjecutarAgregarFactura", "ServiciosBasicos", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Numero suministro</label>
                                    @{
                                        @Html.DropDownList("idSuministro", (IEnumerable<SelectListItem>)ViewBag.lstSuministro, "Seleccione suministro", new { @class = "form-control" })
                                    }

                                </div>
                                <div class="form-group">
                                    <label>Valor Factura</label>
                                    <input class="form-control" name="dblValorFactura" type="number" placeholder="Ingrese valor de la factura" value="@Model.valorFactura">
                                </div>
                                <div class="form-group">
                                    <label>Valor pendiente</label>
                                    <input class="form-control" name="dblValorPendiente" type="number" placeholder="Ingrese valor pendiente de la factura" value="@Model.valorPendiente">
                                </div>
                                <div class="form-group">
                                    <label>Fecha Emision</label>
                                    <input class="form-control" type="date" name="strFechaEmision" placeholder="Ingrese fecha" value="@Model.fechaEmision">
                                </div>
                                <div class="form-group">
                                    <label>Fecha de Vencimiento</label>
                                    <input class="form-control" type="date" name="strFechaVencimiento" placeholder="Ingrese fecha" value="@Model.fechaVencimiento">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="blValorPagado" value="@Model.valorPagado">Valor Pagado
                                    </label>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success">Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                                        }
        </div>
    </div>
</div>