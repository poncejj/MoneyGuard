@model MoneyGuard.Web.Models.clsUsuarioApp
@{
    ViewBag.Title = "ModificarUsuarioApp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Modificar Usuario App
            </div>
                @using (Html.BeginForm("EjecutarModificarUsuarioApp", "Aplicacion", FormMethod.Post))
                {
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form">
                            <div class="form-group">
                                <label>Id Usuario</label>
                                <input class="form-control" placeholder="Enter text" value="@Model.idUsuarioApp" disabled>
                            </div>
                            <div class="form-group">
                                <label>Nombre Usuario</label>
                                <input class="form-control" name="nombreUsuario" placeholder="Enter text" value="@Model.nombreUsuarioApp">
                            </div>
                            <div class="form-group">
                                <label>Identificacion Usuario</label>
                                <input class="form-control" name="identificacionUsuario" placeholder="Enter text" maxlength="10" type="number"  value="@Model.identificacionUsuarioApp">
                            </div>
                            <div class="form-group">
                                <label>PIN Usuario</label>
                                <input class="form-control" name="pinUsuario" placeholder="Enter text" maxlength="4" type="number"  value="@Model.pinUsuarioApp">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="eliminadoUsuario" value="@Model.eliminadoUsuarioApp">Usuario Eliminado
                                </label>
                            </div>
                            <div>
                                <button type="submit" class="btn btn-success">Modificar</button>
                                <input type="hidden" name="idUsuario" value="@Model.idUsuarioApp">
                            </div>
                        </form>
                        
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            }
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
