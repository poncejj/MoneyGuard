@model List<MoneyGuard.Web.Models.clsCliente>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Clientes</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarCliente", "Cooperativa", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID Cliente</th>
                                <th>Nombre Cliente</th>
                                <th>Identificacion Cliente</th>
                                <th>Telefono Cliente</th>
                                <th>Email Cliente</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsCliente objCliente in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objCliente.idCliente</td>
                                    <td>@objCliente.nombreCliente @objCliente.apellidoCliente</td>
                                    <td>@objCliente.identificacionCliente</td>
                                    <td>@objCliente.telefonoCliente</td>
                                    <td>@objCliente.emailCliente</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarCliente", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idCliente" name="idcliente" value="@objCliente.idCliente" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarCliente", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idClienteEliminado" name="idclienteeliminado" value="@objCliente.idCliente" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
