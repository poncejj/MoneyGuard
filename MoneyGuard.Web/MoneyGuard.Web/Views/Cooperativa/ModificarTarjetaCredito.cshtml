@model MoneyGuard.Web.Models.clsTarjetaCredito

@{
    ViewBag.Title = "ModificarTarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Modificar Tarjeta Credito
            </div>
            @using (Html.BeginForm("EjecutarModificarTarjetaCredito", "Cooperativa", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Cliente</label>
                                    @{
                                        <input type="hidden" id="strCuenta" name="strCuenta" value="@Model.strNumeroCuenta" />
                                        @Html.DropDownList("strIdCuenta", (IEnumerable<SelectListItem>)ViewBag.lstCuentas, "Seleccione una cuenta", new { @class = "form-control" })
                                    }

                                </div>
                                <div class="form-group">
                                    <label>Numero Tarjeta Credito</label>

                                    <input class="form-control" name="strNumeroTarjetaCredito" placeholder="Ingrese cedula" value="@Model.strNumeroTarjeta">
                                </div>
                                <div class="form-group">
                                    <label>Tipo TarjetaCredito</label>
                                    @{
                                        <input type="hidden" id="strMarca" name="strmarca" value="@Model.strMarcaTarjeta" />
                                        @Html.DropDownList("strMarcaTarjeta", (IEnumerable<SelectListItem>)ViewBag.lstTipoTarjetas, "Seleccione tipo tarjeta credito", new { @class = "form-control" })
                                    }
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success">Modificar</button>
                                    <input type="hidden" id="strIdTarjetaCredito" name="stridtarjetacredito" value="@Model.idTarjetaCredito" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                                        }
        </div>
    </div>
</div>