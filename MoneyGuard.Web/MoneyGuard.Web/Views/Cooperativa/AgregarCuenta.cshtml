@model MoneyGuard.Web.Models.clsCuenta

@{
    ViewBag.Title = "AgregarCuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Agregar Cuenta
            </div>
            @using (Html.BeginForm("EjecutarAgregarCuenta", "Cooperativa", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Cliente</label>
                                    @{
                                        @Html.DropDownList("strIdCliente", (IEnumerable<SelectListItem>)ViewBag.lstClientes, "Seleccione cliente", new { @class = "form-control" })
                                    }

                                </div>
                                <div class="form-group">
                                    <label>Numero Cuenta</label>
                                    <input class="form-control" name="strNumeroCuenta" placeholder="Ingrese cedula" value="@Model.numeroCuenta">
                                </div>
                                <div class="form-group">
                                    <label>Tipo Cuenta</label>
                                    @{
                                        @Html.DropDownList("strTipoCuenta", (IEnumerable<SelectListItem>)ViewBag.lstTipoCuenta, "Seleccione tipo cuenta", new { @class = "form-control" })
                                    }
                                </div>
                                <div class="form-group">
                                    <label>Saldo Cuenta</label>
                                    <input class="form-control" name="strSaldo" placeholder="Ingrese apellido" value="@Model.saldo">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input type="checkbox" name="strEstado" value="@Model.estado">Activo
                                    </label>
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success">Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>