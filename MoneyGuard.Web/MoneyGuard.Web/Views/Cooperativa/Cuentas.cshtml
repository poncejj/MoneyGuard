@model List<MoneyGuard.Web.Models.clsCuenta>

@{
    ViewBag.Title = "Cuentas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Cuentas</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarCuenta", "Cooperativa", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID Cuenta</th>
                                <th>Numero Cuenta</th>
                                <th>Nombre Cliente</th>
                                <th>Tipo Cuenta</th>
                                <th>Saldo Cuenta</th>
                                <th>Estado</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsCuenta objCuenta in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objCuenta.idCuenta</td>
                                    <td>@objCuenta.numeroCuenta</td>
                                    <td>@objCuenta.nombreCliente</td>
                                    <td>@objCuenta.tipoCuenta</td>
                                    <td>@objCuenta.saldo</td>
                                    <td>@objCuenta.estado</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarCuenta", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idCuenta" name="idcuenta" value="@objCuenta.idCuenta" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarCuenta", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="strNumeroCuenta" name="strnumerocuenta" value="@objCuenta.numeroCuenta" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>