@model List<MoneyGuard.Web.Models.clsTarjetaCredito>

@{
    ViewBag.Title = "TarjetasCredito";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">TarjetaCreditos</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarTarjetaCredito", "Cooperativa", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID Tarjeta Credito</th>
                                <th>Numero Tarjeta Credito</th>
                                <th>Nombre Cliente</th>
                                <th>Numero Cuenta</th>
                                <th>Marca Tarjeta Credito</th>
                                <th>Cupo TarjetaCredito</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                                <th>Cupos</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsTarjetaCredito objTarjetaCredito in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objTarjetaCredito.idTarjetaCredito</td>
                                    <td>@objTarjetaCredito.strNumeroTarjeta</td>
                                    <td>@objTarjetaCredito.strNombreCliente</td>
                                    <td>@objTarjetaCredito.strNumeroCuenta</td>
                                    <td>@objTarjetaCredito.strMarcaTarjeta</td>
                                    <td>@objTarjetaCredito.dblCupoTarjeta</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarTarjetaCredito", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idTarjetaCredito" name="idtarjetacredito" value="@objTarjetaCredito.idTarjetaCredito" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarTarjetaCredito", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idTarjetaCreditoEliminado" name="idtarjetacreditoeliminado" value="@objTarjetaCredito.idTarjetaCredito" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("CupoTarjeta", "Cooperativa", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-info btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idTarjetaCreditoCupo" name="idtarjetacreditocupo" value="@objTarjetaCredito.idTarjetaCredito" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>