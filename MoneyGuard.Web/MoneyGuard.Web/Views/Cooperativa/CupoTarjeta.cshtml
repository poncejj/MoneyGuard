@model MoneyGuard.Web.Models.clsSaldoTarjetaCredito

@{
    ViewBag.Title = "CupoTarjeta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Modificar Tarjeta Credito
            </div>
            @using (Html.BeginForm("EjecutarModificarSaldoTarjetaCredito", "Cooperativa", FormMethod.Post))
            {
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <form role="form">
                                <div class="form-group">
                                    <label>Numero Tarjeta</label>
                                        <input class="form-control" value="@Model.strNumeroTarjeta" disabled />
                                        <input type="hidden" name="strNumeroTarjetaCredito" value="@Model.strNumeroTarjeta"/>
                                </div>
                                <div class="form-group">
                                    <label>Cupo Tarjeta</label>
                                    <input class="form-control" type="number" name="strDblCupoTarjeta" placeholder="Cupo tarjeta" value="@Model.dblCupoTarjeta">
                                </div>
                                <div class="form-group">
                                    <label>Saldo Tarjeta</label>
                                    <input class="form-control" type="number" name="strDblSaldoPendiente" placeholder="Saldo pendiente tarjeta" value="@Model.dblSaldoTarjeta">
                                </div>
                                <div class="form-group">
                                    <label>Consumo Tarjeta</label>
                                    <input class="form-control" type="number" name="strDblConsumoTarjeta" placeholder="Consumo mes con tarjeta" value="@Model.dblConsumoTarjeta">
                                </div>
                                <div class="form-group">
                                    <label>Minimo a pagar Tarjeta</label>
                                    <input class="form-control" type="number" name="strDblMinimoPagarTarjeta" placeholder="Minimo a pagar" value="@Model.dblMinimoPagar">
                                </div>
                                <div class="form-group">
                                    <label>Fecha Pago Tarjeta</label>
                                    <input class="form-control" type="date" name="strFechaPago" placeholder="Fecha" value="@Model.strFechaPago">
                                </div>
                                <div class="form-group">
                                    <label>Fecha corte Tarjeta</label>
                                    <input class="form-control" type="date" name="strFechaCorte" placeholder="Fecha" value="@Model.strFechaCorte">
                                </div>
                                <div>
                                    <button type="submit" class="btn btn-success">Modificar</button>
                                    <input type="hidden" id="strIdSaldoTarjeta" name="stridsaldotarjeta" value="@Model.idSaldoTarjetaCredito" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                                        }
        </div>
    </div>
</div>