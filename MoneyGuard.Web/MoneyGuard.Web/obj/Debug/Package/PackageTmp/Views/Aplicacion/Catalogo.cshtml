@model List<MoneyGuard.Web.Models.clsCatalogo>

@{
    ViewBag.Title = "Catalogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Catalogo</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarCatalogo", "Aplicacion", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID Catalogo</th>
                                <th>Nombre Catalogo</th>
                                <th>Catalogo Padre</th>
                                <th>ID Catalogo Padre</th>
                                <th>Fecha Creacion</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsCatalogo objCatalogo in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objCatalogo.idCatalogo</td>
                                    <td>@objCatalogo.nombreCatalogo</td>
                                    <td>@objCatalogo.catalogoPadre</td>
                                    <td>@objCatalogo.idCatalogoPadre</td>
                                    <td class="center">@objCatalogo.fechaCreacionCatalogo</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarCatalogo", "Aplicacion", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idCatalogo" name="idcatalogo" value="@objCatalogo.idCatalogo" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarCatalogo", "Aplicacion", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idCatalogoEliminado" name="idcatalogoeliminado" value="@objCatalogo.idCatalogo" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
