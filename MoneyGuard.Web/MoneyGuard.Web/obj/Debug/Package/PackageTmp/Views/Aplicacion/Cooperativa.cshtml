@model List<MoneyGuard.Web.Models.clsCooperativa>

@{
    ViewBag.Title = "Cooperativa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Usuarios App Movil</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarCooperativa", "Aplicacion", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>ID Cooperativa</th>
                                <th>Nombre Cooperativa</th>
                                <th>Nombre cola envio</th>
                                <th>Nombre cola respuesta</th>
                                <th>Fecha Creacion</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsCooperativa objCooperativa in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objCooperativa.idCooperativa</td>
                                    <td>@objCooperativa.nombreCooperativa</td>
                                    <td>@objCooperativa.nombreColaEnvio</td>
                                    <td>@objCooperativa.nombreColaRespuesta</td>
                                    <td class="center">@objCooperativa.fechaCreacionCooperativa</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarCooperativa", "Aplicacion", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCooperativa">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idCooperativa" name="idcooperativa" value="@objCooperativa.idCooperativa" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarCooperativa", "Aplicacion", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idCooperativaEliminar" name="idcooperativaeliminar" value="@objCooperativa.idCooperativa" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>

