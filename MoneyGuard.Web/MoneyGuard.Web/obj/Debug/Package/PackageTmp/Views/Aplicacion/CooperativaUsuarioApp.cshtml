@model List<MoneyGuard.Web.Models.clsCooperativaUsuario>
    @{
        ViewBag.Title = "CooperativaUsuarioApp";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Cooperativa Usuarios App Movil</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>ID Cooperativa Usuario</th>
                                    <th>Nombre Usuario</th>
                                    <th>ID Cooperativa</th>
                                    <th>Fecha Creacion</th>
                                    <th>Modificar</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (MoneyGuard.Web.Models.clsCooperativaUsuario objCooperativaUsuario in @Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@objCooperativaUsuario.idCooperativaUsuario</td>
                                        <td>@objCooperativaUsuario.nombreUsuario</td>
                                        <td>@objCooperativaUsuario.idCooperativa</td>
                                        <td class="center">@objCooperativaUsuario.fechaCreacionCooperativaUsuario</td>
                                        <td class="center">
                                            @using (Html.BeginForm("ModificarCooperativaUsuario", "Aplicacion", FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-warning btn-circle" value="ModificarUsuarioApp">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <input type="hidden" id="idCooperativaUsuario" name="idCooperativaUsuario" value="@objCooperativaUsuario.idCooperativaUsuario" />
                                            }
                                        </td>
                                        <td class="center">
                                            @using (Html.BeginForm("EliminarCooperativaUsuario", "Aplicacion", FormMethod.Post))
                                            {
                                                <button type="submit" class="btn btn-danger btn-circle">
                                                    <i class="fa fa-remove"></i>
                                                </button>
                                                <input type="hidden" id="idCooperativaUsuario" name="idCooperativaUsuario" value="@objCooperativaUsuario.idCooperativaUsuario" />
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
