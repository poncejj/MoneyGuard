@model List<MoneyGuard.Web.Models.clsSuministro>

@{
    ViewBag.Title = "Suministro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Suministro</h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @using (Html.BeginForm("AgregarSuministro", "ServiciosBasicos", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Agregar</button>
                }
            </div>
            <div class="panel-body">
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                        <thead>
                            <tr>
                                <th>Numero de suministro</th>
                                <th>Nombre Cliente</th>
                                <th>Servicio</th>
                                <th>Direccion</th>
                                <th>Modificar</th>
                                <th>Eliminar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (MoneyGuard.Web.Models.clsSuministro objSuministro in @Model)
                            {
                                <tr class="odd gradeX">
                                    <td>@objSuministro.numeroSuministro</td>
                                    <td>@objSuministro.nombreCliente</td>
                                    <td>@objSuministro.nombreServicio</td>
                                    <td>@objSuministro.direccionSuministro</td>
                                    <td class="center">
                                        @using (Html.BeginForm("ModificarSuministro", "ServiciosBasicos", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-warning btn-circle" value="ModificarCatalogo">
                                                <i class="fa fa-edit"></i>
                                            </button>
                                            <input type="hidden" id="idSuministro" name="idsuministro" value="@objSuministro.idSuministro" />
                                        }
                                    </td>
                                    <td class="center">
                                        @using (Html.BeginForm("EliminarSuministro", "ServiciosBasicos", FormMethod.Post))
                                        {
                                            <button type="submit" class="btn btn-danger btn-circle">
                                                <i class="fa fa-remove"></i>
                                            </button>
                                            <input type="hidden" id="idSuministroEliminado" name="idsuministroeliminado" value="@objSuministro.idSuministro" />
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>